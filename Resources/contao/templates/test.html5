<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>Title</title>
    <script src="http://ajax.googleapis.com/ajax/libs/jquery/1.7.1/jquery.min.js" type="text/javascript"></script>
</head>
<body>
    <div class="input-route" style="">
        <div class="route-from-input">
            <div class="input-route-from-field">
                <button class="route-from-geolocation"></button>
                <input type="text" class="route-from" name="routeFrom" placeholder="PLZ, Ort oder Straße eingeben..." autocomplete="off">
            </div>
        </div>
        <div class="route-to-input">
            <div class="input-route-to-field">
                <button class="route-to-geolocation"></button>
                <input type="text" class="route-to ui-autocomplete-input" name="routeTo" placeholder="PLZ, Ort oder Straße eingeben..." autocomplete="off">
            </div>
        </div>
    <script defer>
        $(document).ready(function () {
            let clickAction = $(".route-from-geolocation").click(function() {
                if(navigator.geolocation){
                    function showPosition(position) {
                        let element = $(".route-from");
                        element.val("Latitude: " + position.coords.latitude +
                            "<br>Longitude: " + position.coords.longitude);
                    }
                    navigator.geolocation.getCurrentPosition(showPosition);
                }
            });
        });


    </script>
</body>
</html>